{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if age > 18 %}
        <p> Vous êtez <b>majeur</b></p>
    {% else %}
        <p> Vous êtez <b>mineur</b></p>
    {% endif %}

    Vous avez
    {{age}}
    ans.

    {% set fruits = ["banana", "apple", "cherry"] %}
    {{ dump(fruits)}}

    <ul>
        {% for fruit in fruits %}
            <li>{{ fruit }}</li>
        {% endfor %}
    </ul>

    {% set numbers = [3,45,7,8,8,9,6,5,4] %}
    <i>{{max(numbers)}}</i>

    {% set myTitle = '<h1>Mon super titre</h1>'%}
    {{myTitle|raw}}

    {{"now"|date("d/m/Y")}}

    <button class="btn btn-primary">Mon shop</button>
</div>

{% endblock %}
